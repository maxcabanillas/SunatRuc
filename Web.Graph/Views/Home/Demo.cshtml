@section styles
{
    <style>
        #log {
            width: 100%;
            height: 25rem;
        }
        pre {
            outline: 1px solid #ccc;
            padding: 5px;
            margin: 5px;
        }
        .string {
            color: green;
        }
        .number {
            color: darkorange;
        }
