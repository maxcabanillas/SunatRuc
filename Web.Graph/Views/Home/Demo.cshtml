@section styles
{
    <style>
        #log {
            width: 100%;
            height: 25rem;
        }
        pre {
            outline: 1px solid #ccc;
            padding: 5px;
            margin: 5px;
        }
        .string {
            color: green;
        }
        .number {
            color: darkorange;
        }
        .boolean {
            color: blue;
        }
        .null {
            color: magenta;
        }
        .key {
            color: red;
        }
    </style>
}

@section scripts
{
    <script src="~/Scripts/client-graph.js"></script>
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="frmQuery" role="form" action="/api/Ruc" method="post">
                <div class="row">
                    <div class="col-sm-4 pull-left">
                        <h3>GraphiQL</h3>
                    </div>
                    <div class="col-sm-4 pull-right">
                        <button type="submit" class="btn btn-primary pull-right" data-toggle="tooltip" data-placement="top" title="Ejecutar">
                            <span class="glyphicon glyphicon-play"></span>
                        </button>
                    </div>
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="query" name="query" rows="20">
query {
	empresa(ruc:"20254138577") {
		ruc
		nombre
        direccion
    }
}
</textarea>
                </div>
            </form>
        </div>
        <div id="Result" class="col-md-6">
            <h3 class="">Resultado</h3>
            <pre id="log">Esperando ejecución...</pre>
        </div>
    </div>
</div>