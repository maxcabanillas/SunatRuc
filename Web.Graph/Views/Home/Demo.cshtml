    <script src="~/Scripts/client-graph.js"></script>
}
<div class="row">
    <div class="col-md-6">
        <form id="frmQuery" role="form" action="/api/Ruc" method="post">
            <div class="row">
                <div class="col-sm-4 pull-left">
                    <h3>GraphiQL</h3>
                </div>
                <div class="col-sm-4 pull-right">
                    <button type="submit" class="btn btn-primary pull-right" id="btnExecute" data-toggle="tooltip" data-placement="top" title="Ejecutar">
                        <span id="icoEx" class="fa fa-play fa-lg"></span>
                    </button>
                </div>
            </div>
            <div class="form-group">
                <div id="editorQ">
query {
    empresa(ruc:"20254138577") {
	    ruc
	    nombre
        direccion
    }
}
</div>
            </div>
        </form>
    </div>
    <div id="Result" class="col-md-6">
        <h3 class="">Resultado&nbsp;(<i style="color: red">beta</i>)</h3>
        <div id="editorO">Esperando ejecución...</div>
    </div>
</div>
