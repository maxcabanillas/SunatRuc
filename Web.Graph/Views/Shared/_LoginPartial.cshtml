@using Microsoft.AspNet.Identity
<li class="dropdown">
    
@if (Request.IsAuthenticated)
{
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-user fa-lg"></span> <span class="caret"></span></a>
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
    <ul class="dropdown-menu">
        <li>
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", new { area = "" }, new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-lg"></i>&nbsp;Cerrar sesión</a></li>
    </ul>

}
else
{
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cuenta<span class="caret"></span></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("Registrarse", "Register", "Account", new { area = "" }, new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", new { area = "" }, new { id = "loginLink" })</li>
    </ul>
}
</li>
